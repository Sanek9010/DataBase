<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <style>
        .col-centered{
            float: none;
            margin: 0 auto;
        }
        body {
            background-image: url("https://www.arum.co.uk/wp-content/uploads/2013/11/site-background.jpg");
            background-color: #cccccc;
        }
    </style>
</head>
<body>
<header>
    <br />
    <h1 class="text-center">Учебный план</h1>

    <br />
</header>
<div class="container-fluid border border-dark col-md-4 col-centered bg-light text-center">
    {% if (is_granted('IS_AUTHENTICATED_FULLY')==false) %}
        <br />
        <input type="button" value="Зарегистрироваться" onClick='location.href="{{ path('register_page') }}"'>
        <input type="button" value="Войти" onClick='location.href="{{ path('login') }}"'>
        <br />
        <br />
    {% else %}
        <br />
        <input type="button" value="Посмотреть существующие учебные планы" onClick='location.href="{{ path('show') }}"'>
        <input type="button" value="Создать учебный план" onClick='location.href="{{ path('create') }}"'>
        <br />
        <br />

    {% endif %}

</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>